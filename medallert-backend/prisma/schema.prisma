generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id   String @id @default(uuid())
  full_name String
  email     String @unique
  phone     String
  hash      String
